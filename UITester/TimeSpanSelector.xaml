<UserControl x:Class="TimeSpanSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox FontFamily="Consolas" FontSize="16" Name="txtHour" VerticalAlignment="Center">00</TextBox>
            <TextBlock FontFamily="Consolas" Margin="0,4,0,0" FontSize="16">:</TextBlock>
            <TextBox FontFamily="Consolas" FontSize="16" Name="txtMin" VerticalAlignment="Center">00</TextBox>
            <TextBlock FontFamily="Consolas" Margin="0,4,0,0" FontSize="16">:</TextBlock>
            <TextBox FontFamily="Consolas" FontSize="16" Name="txtSec" VerticalAlignment="Center">00</TextBox>            
            <StackPanel Orientation="Vertical">
                <TextBlock Name="Up" FontSize="14" FontFamily="Marlett">5</TextBlock>
                <TextBlock Name="Down" FontSize="14" FontFamily="Marlett">6</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
